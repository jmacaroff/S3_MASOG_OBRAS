@page
@model MASOG_OBRAS.Pages.Compras.Ordenes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Orden</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden.FechaEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden.FechaEntrega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden.Observacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden.Proveedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden.Proveedor.RazonSocial)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenItems[0].Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenItems[0].Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenItems[0].Precio)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenItems[0].Observacion)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrdenItems)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Producto.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td align="right">
                @string.Format("{0:C2}", item.Precio)
            </td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <!--<a asp-page="./Edit" asp-route-id="@Model.Orden.Id">Editar</a> -->
    <a asp-page="./Index">Volver al listado</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Orden.Id">Eliminar</a>
</div>
