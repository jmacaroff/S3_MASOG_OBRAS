@page
@model MASOG_OBRAS.Pages.Compras.OrdenesPago.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrdenPago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdenPago.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenPago.FechaEmision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdenPago.FechaEmision)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenPago.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdenPago.Observacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenPago.Total)
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:C2}", Model.OrdenPago.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenPago.Proveedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdenPago.Proveedor.RazonSocial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenPago.ConceptoPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdenPago.ConceptoPago.Descripcion)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdenPagoItems[0].FacturaCompra.PuntoVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenPagoItems[0].FacturaCompra.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenPagoItems[0].Importe)
            </th>
            <th></th><th></th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrdenPagoItems)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.FacturaCompra.PuntoVenta)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.FacturaCompra.Numero)
            </th>
            <td align="right">
                @string.Format("{0:C2}", item.Importe)
            </td>
            <td></td><td></td><td></td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Index">Volver a la lista</a> |
    <a asp-page="./Delete" asp-route-id="@Model.OrdenPago.Id">Eliminar</a>
</div>
