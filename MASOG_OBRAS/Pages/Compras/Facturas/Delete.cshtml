@page
@model MASOG_OBRAS.Pages.Compras.Facturas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esta factura de compra?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.PuntoVenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.PuntoVenta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.ProveedorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.Proveedor.RazonSocial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.TipoFactura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.TipoFactura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.FechaFactura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.FechaFactura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.FechaAlta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.FechaAlta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.OrdenId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.OrdenId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacturaCompra.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacturaCompra.Observacion)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FacturaCompraItems[0].Producto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FacturaCompraItems[0].Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FacturaCompraItems[0].Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FacturaCompraItems[0].Observacion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FacturaCompraItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacion)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.MessageError != null)
    {
        <div class="alert alert-warning">
            @Model.MessageError
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="FacturaCompra.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver al listado</a>
    </form>
</div>
