@page
@model MASOG_OBRAS.Pages.Ventas.Recibos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar este Recibo?</h3>
<div>
    <h4>Recibo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recibo.FechaEmision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recibo.FechaEmision)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recibo.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recibo.Observacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recibo.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recibo.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recibo.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recibo.Cliente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recibo.ConceptoPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recibo.ConceptoPago.Descripcion)
        </dd>
    </dl>

    @if (Model.MessageError != null)
    {
        <div class="alert alert-warning">
            @Model.MessageError
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Recibo.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.Recibo.Id">Detalles</a> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>
