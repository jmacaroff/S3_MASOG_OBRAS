@page
@model MASOG_OBRAS.Pages.Ventas.Recibos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Recibos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Nuevo Recibo</a>
</p>

<!-- Campo de Búsqueda por Fecha -->

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Buscar por Fecha:&nbsp;
            <input type="date" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Buscar" class="btn btn-primary" /> |
            <a asp-page="./Index">Volver a la Lista Completa</a>
        </p>
    </div>
</form>

<div class=" row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Recibos[0].FechaEmision)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recibos[0].Observacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recibos[0].Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recibos[0].Cliente)
                            </th>
                            <th>
                                Concepto
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Recibos)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaEmision)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacion)
                                </td>
                                <td align="right">
                                    @string.Format("{0:C2}", @item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConceptoPago.Descripcion)
                                </td>
                                <td>
                                    <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.Recibos.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Recibos.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Recibos.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Anterior
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Recibos.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Siguiente
</a>
