@page
@model MASOG_OBRAS.Pages.Inventarios.Productos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo producto</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Producto.Id" class="control-label"></label>
                <input asp-for="Producto.Id" class="form-control" />
                <span asp-validation-for="Producto.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Descripcion" class="control-label"></label>
                <input asp-for="Producto.Descripcion" class="form-control" />
                <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Precio" class="control-label"></label>
                <input asp-for="Producto.Precio" class="form-control" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Observacion" class="control-label"></label>
                <input asp-for="Producto.Observacion" class="form-control" />
                <span asp-validation-for="Producto.Observacion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Producto.Activo" /> @Html.DisplayNameFor(model => model.Producto.Activo)
                </label>
            </div>

            @* Mensaje que muestra el error en la validación. *@

            @if (Model.MessageError != null)
            {
                <div class="alert alert-warning" role="alert">@Model.MessageError</div>
            }

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

