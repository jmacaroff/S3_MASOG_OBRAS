@page
@model MASOG_OBRAS.Pages.Inventarios.Productos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar este producto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Observacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Activo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Activo)
        </dd>
    </dl>

    @if (Model.MessageError != null)
    {
        <div class="alert alert-warning">
            @Model.MessageError
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Producto.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>

