@page
@model MASOG_OBRAS.Pages.Inventarios.MovsStock.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar este movimiento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovStock.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovStock.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovStock.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovStock.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovStock.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovStock.Observacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovStock.TipoMovimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovStock.TipoMovimiento.Descripcion)
        </dd>
    </dl>

    @if (Model.MessageError != null)
    {
        <div class="alert alert-warning">
            @Model.MessageError
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="MovStock.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.MovStock.Id">Detalles</a> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>
